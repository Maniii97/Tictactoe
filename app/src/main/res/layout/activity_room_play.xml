<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#F6F6F6"
    android:layout_height="match_parent"
    tools:context=".BotGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout

            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="22.5dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/count_background"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tvBotWin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="20dp"
                android:textColor="#353535"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/sfpro_medium" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="10"
            android:orientation="vertical">



            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/civPlayer1"
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:src="@drawable/baseline_person_24"
                app:civ_shadow="true"
                app:civ_shadow_radius="1dp"
                />


            <TextView
                android:id="@+id/tvPLayer1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_weight="2.65"
                android:fontFamily="@font/sfpro_medium"
                android:gravity="center"
                android:text="Player 1"
                android:textColor="#353535"
                android:textSize="14dp" />



        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_weight="4"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@drawable/grid">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.85"
            android:orientation="horizontal"
            android:weightSum="10">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="1"
                android:id="@+id/iv1"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="2"
                android:id="@+id/iv2"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="3"
                android:id="@+id/iv3"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.85"
            android:orientation="horizontal"
            android:weightSum="10">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="4"
                android:id="@+id/iv4"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="5"
                android:id="@+id/iv5"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="6"
                android:id="@+id/iv6"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="10">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="7"
                android:id="@+id/iv7"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="8"
                android:id="@+id/iv8"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="9"
                android:id="@+id/iv9"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="10"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/civPlayer2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="6.85"
                android:src="@drawable/baseline_person_24"
                app:civ_shadow="true"
                app:civ_shadow_radius="1dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25" />

            <TextView
                android:id="@+id/tvPlayer2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:text="Player 2"
                android:textSize="14dp"
                android:textColor="#353535"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/sfpro_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"></View>

        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="22.5dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/count_background"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tvPlayerWin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sfpro_medium"
                android:gravity="center"
                android:text="0"
                android:textColor="#353535"
                android:textSize="20dp" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" />


    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:layout_gravity="center"
        android:elevation="4dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="40dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7.5dp"
            android:layout_gravity="center"
            android:src="@drawable/settings_gif" />


    </androidx.cardview.widget.CardView>







</LinearLayout>