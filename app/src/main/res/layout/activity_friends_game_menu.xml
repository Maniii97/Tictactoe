<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsGameMenuActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_backbtnblue"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ContainerGameMenu"
        android:layout_width="match_parent"
        android:layout_height="517dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/spfro_semibold"
            android:text="Choose your play mode"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRoom"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_1"
            android:fontFamily="@font/sfpro_medium"
            android:text="Room"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnThisdevice"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_2"
            android:fontFamily="@font/sfpro_medium"
            android:text="This Device"
            android:textAlignment="center"
            android:textColor="#FF3800"
            android:textSize="18dp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:elevation="4dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="40dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="7.5dp"
                android:src="@drawable/settings_gif" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>